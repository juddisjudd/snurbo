# Discord Bot Configuration
DISCORD_TOKEN=
DISCORD_CLIENT_ID=

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
LLM=llama3.1:8b  

# Alternative model options:
# LLM=gemma3:4b           # Fast, good for Discord chat
# LLM=llama3.1:8b         # Well-rounded, natural conversation  
# LLM=deepseek-r1:7b      # Reasoning model (may be verbose)
# LLM=qwen2.5:7b          # Another good chat option

# Bot Behavior
MAX_CONTEXT_MESSAGES=10
RESPONSE_CHANCE=0.15
MAX_REQUESTS_PER_MINUTE=5

# Logging Configuration
LOG_LEVEL=info
LOG_STYLE=clean
# Available styles: clean, compact, detailed, production

# Environment
NODE_ENV=development